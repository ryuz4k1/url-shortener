<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Url Shrinker</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

</head>

<body>
    <div class="container">
        <h1> URL Shrinker </h1>
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <label for="fullUrl" class="sr-only"> Url </label>
            <input placeholder="url" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2" required>
            <button type="submit" class="btn btn-success"> Shrink </button>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th> Full URL </th>
                    <th> Short URL </th>
                    <th> Click </th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <td> <a href="<%= shortUrl.full %>"> <%= shortUrl.full %> </a> </td>
                        <td> <a href="<%= shortUrl.full %>"> <%= shortUrl.short %> </a> </td>
                        <td> <%= shortUrl.clicks %> </td>
                    </tr>
                <%  }); %>
                
            </tbody>
        </table>
    </div>




</body>

</html>